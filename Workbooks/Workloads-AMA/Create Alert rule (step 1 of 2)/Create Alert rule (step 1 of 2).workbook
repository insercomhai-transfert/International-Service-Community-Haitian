            "version": "KqlParameterItem/1.0",
            "name": "QueryWithProfile",
            "type": 1,
            "query": "Resources \r\n| take 1\r\n| project templateQuery = dynamic(\"{AlertQuery}\")\r\n| extend query = tostring(templateQuery)\r\n| extend profileId = tostring('{MonitoringProfile:subscription} {MonitoringProfile:resourcegroup} {MonitoringProfile:name}')\r\n| extend replaceProfile = replace(@'\\{ProfileId\\}', profileId, query)\r\n| extend replaceThreshold = replace(@'\\{AlertThreshold\\}', @'{AlertThreshold}', replaceProfile)\r\n| project id=replaceThreshold\r\n",
            "crossComponentResources": [
              "value::all"
            ],
            "isHiddenWhenLocked": true,
            "queryType": 1,
            "resourceType": "microsoft.resourcegraph/resources"
          }
